    <script>
        function validateBrandForm() {
            // Brand Name validation
            var brandInput = document.forms["brandForm"]["brand"];
            var brandError = document.getElementById("brand-error");
            var brandRegex = /^[A-Z]+$/;
    
            if (!brandRegex.test(brandInput.value.trim())) {
                brandError.innerHTML = "Brand name should contain only capital letters";
                brandError.style.color = "red";
                return false;
            } else {
                brandError.innerHTML = "";
            }
    
            // Description validation
            var descriptionInput = document.forms["brandForm"]["description"];
            var descriptionError = document.getElementById("description-error");
    
            // Split the description into words
            var words = descriptionInput.value.trim().split(/\s+/).filter(function (word) {
                return word.length > 0;
            });
    
            if (words.length < 6) {
                descriptionError.innerHTML = "Description should have at least 6 words";
                descriptionError.style.color = "red";
                return false;
            } else {
                descriptionError.innerHTML = "";
            }
    
            return true;
        }
    </script>
    
    
