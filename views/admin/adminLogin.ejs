<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/admAssets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Admin Login </title>
</head>
<body>
    <div class="wrapperal">
        <div class="container-fluid main">
            <div class="row row1">
                <div class="col-md-12 right" style="background-color: #DDD0C8;">
                    <div class="input-box">
                        <header>ADMIN LOGIN</header>
                        <!-- Error and Logout Message Display -->
                        <% if (locals.alert) { %>
                            <div class="alert alert-danger text-center m-3" id="error"><%= locals.alert %></div>
                        <% } %>
                        <% if (locals.logout) { %>
                            <div class="alert alert-success text-center m-3" id="logout"><%= locals.logout %></div>
                        <% } %>
                        <!-- Login Form -->
                        <form action="/submit" method="POST">
                            <div class="input-field">
                                <input type="text" class="input" name="email" id="email" required autocomplete="off">
                                <label for="email">Email</label> 
                            </div> 
                            <div class="input-field">
                                <input type="password" class="input" name="password" id="password" required>
                                <label for="pass">Password</label>  
                            </div> 
                            <div class="input-field">
                                <input type="submit" class="btn btn-primary w-100" value="Login">
                            </div> 
                        </form>
                    </div>  
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript for Error and Logout Message Hiding -->
    <script>
        setTimeout(() => {
            document.getElementById("error").style.display = "none";
        }, 3000);
        setTimeout(() => {
            document.getElementById("logout").style.display = "none";
        }, 3000);
    </script>
</body>
</html>
